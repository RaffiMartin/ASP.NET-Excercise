
@{
    ViewBag.Title = "StudentAccountingSystem";
}

<head>
    <style>
        /* css styles */

        form div {
            margin-bottom: 0.5rem;
        }

        form div input {
            width: 100%;
            height:25%;
        }

        form .year-wrapper {
            margin-top: 0.5rem;
        }

        form div label {
            margin-right: 0.5rem;
        }

        span {
            display: flex;
            align-items:center;
            margin-bottom: 1rem;
        }

        .wrapper {
            display:flex;
        }

        span input {
            margin: 0.5rem 0.5rem 0.5rem 0.2rem;
        }

        table th, table td {
            padding: 1rem;
        }

        #payment-wrapper {
            display: flex;
        }

        #payment-wrapper div {
            margin: 0.5rem;
        }



    </style>
</head>

<body>
    <h2>Student Accounting System</h2>
    <div class="wrapper">
        <div class="w-100">
            <form>
                <!--Personal Information-->
                <div><h6>I.D. Number: </h6><input type="number" id="id-no" placeholder="xxx-xxx-xxx" /></div>
                <div><h6>Last Name: </h6><input type="text" id="lname" placeholder="Dela Cruz" /></div>
                <div><h6>First Name: </h6><input type="text" id="fname" placeholder="Juan" /></div>

                <!--Sex Information-->
                <span>
                    <label>Male </label><input type="radio" id="male" name="radio" value="0" />
                    <label>Female </label><input type="radio" id="fmale" name="radio" value="1" />
                    <label>None-Binary </label><input type="radio" id="nonbinary" name="radio" value="2" />
                </span>

                <!--University Information-->
                <div><h6>Course Code </h6><input type="text" id="crs-code" placeholder="CS50" /></div>

                <!-- <div><h6>Course </h6><input type="text" id="crs" placeholder="Bachelor of Science in Computer Science" /></div> -->


                <div class="year-wrapper">
                    <select id="crs">
                        <option selected disabled>Select Course</option>
                        <option value="0">C1</option>
                        <option value="1">C2</option>
                        <option value="2">C3</option>
                        <option value="3">C4</option>
                        <option value="4">C5</option>
                        <option value="5">C6</option>
                        <option value="6">C7</option>
                        <option value="7">C8</option>
                    </select>
                </div>

                <div class="year-wrapper">
                    <select id="year-level">
                        <option selected disabled>Select Year Level</option>
                        <option value="0">First Year</option>
                        <option value="1">Second Year</option>
                        <option value="2">Third Year</option>
                        <option value="3">Fourth Year</option>
                    </select>
                </div>

                <div><h6>Subject/s: </h6><input type="number" id="subs" placeholder="Number of Subjects" /></div>

                <div><input type="button" id="btn" value="Submit" /></div>
            </form>
        </div>
    </div>

    <div class="mt-5 md-5" id="student-info"></div>

    <div class="mt-5 border border-1" id="table-wrapper">
        <table id="my-table">
            <tr id="code">
                <th>CODE</th>

            </tr>
            <tr id="crsData">
                <th>COURSE</th>

            </tr>
            <tr id="tuition">
                <th>TUITION</th>

            </tr>
            <tr id="reg">
                <th>REGISTRATION</th>

            </tr>
            <tr id="msc">
                <th>MISC</th>

            </tr>
            <tr id="lab">
                <th>LAB FEE</th>

            </tr>
        </table>
    </div>

    <div class="mt-5 md-5">
        <div id="total"></div>

        <div id="payment-wrapper">
            <div><input type="button" id="cash" value="Cash"/></div>
            <div><input type="button" id="check" value="Check"/></div>
            <div><input type="button" id="credit" value="Credit"/></div>
        </div>

    </div>
    


    @section scripts {
        <script src="~/Scripts/jquery/jquery-3.7.1.min.js"></script>
        <script src="~/Scripts/practice/StudentAccount.js"></script>
    }
</body>


